<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textInputHeight</item>
    </style>

    <!-- style for text views in profile screen -->
    <style name="TextViewStyle">
        <!--        <item name="android:fontFamily">sans-serif-thin</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <!--        <item name="android:textAppearance">?android:textAppearanceMedium</item>-->
        <item name="android:textStyle">bold</item>
    </style>


    <!--Style for edit text fields in profile screen -->
    <style name="StaffTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>

    </style>

    <dimen name="text_size_14sp">14sp</dimen>
</resources>
